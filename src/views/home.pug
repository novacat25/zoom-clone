doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
        link(rel="stylesheet", href="/public/css/style.css")
        script(defer, src="/socket.io/socket.io.js") 
        script(defer, src="/public/js/app.js") 
    body
        header
            h1 Noom
        main
            h2 Welcome to Noom
            h3(id="username-display", hidden)
            section
                form#nickname-form
                    input(id="nickname-input", placeholder="Choose your nickname!", required, type="text")
                    button Choose
            section#welcome
                form#room-name
                    input(id="room-input", placeholder="room name", required, type="text")
                    button Enter Room
            section(id="room", hidden)
                h2#room-title
                ul#dialog-list                      
                form#chat-form
                    input(id="message-input", placeholder="Send a message!", required, type="text")
                    button Send
        