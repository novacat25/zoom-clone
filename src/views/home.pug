doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
        link(rel="stylesheet", href="/public/css/style.css")
        script(defer, src="/socket.io/socket.io.js") 
        script(defer, src="/public/js/app.js") 
    body
        header
            h1 Noom
        main
            section#welcome
                form#enter-room
                    input(placeholder="room name", required, type="text", id="room-title")
                    button Enter Room
            section#call
                section#my-stream
                video#my-face(autoplay, playsinline, width="400", height="400")
                button(id="mute", class="zoom-button") Mute
                button(id="camera", class="zoom-button") Camera Off
                select(id="camera-select")